<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/bg_hui">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/title" />

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/title2"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="30dp"
            android:background="@color/white"
            android:orientation="vertical" >

            <ImageView 
                
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:scaleType="centerCrop"
                android:src="@drawable/huiyuan"
               
                />
            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view1"
                    android:background="@color/qianhui_color" />
            
           
            
            <FrameLayout 
                android:layout_width="200dp"
	            android:layout_height="wrap_content"
	            android:background="@drawable/biankuang"
	            android:layout_gravity="center_horizontal"
	            android:layout_marginTop="20dp"
                >
                
                <LinearLayout 
                android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:layout_gravity="center_horizontal"
	            android:layout_marginTop="20dp"
                    >
                <TextView 
                     android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="永久"
                    android:textColor="@color/chengse"
                    android:textSize="@dimen/font_16"
                    />
                <TextView 
                     android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="VIP会员"
                    android:textColor="@color/zhonghui"
                    android:textSize="@dimen/font_min"
                    />
          
              
                
                </LinearLayout>
                
                <TextView 
                    android:id="@+id/rank_amount"
                     android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:textColor="@color/font_lanse"
                    android:textSize="20sp"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="30dp"
                    />
                
                
                
            </FrameLayout>
            
             <TextView 
                     android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:textColor="@color/font_lanse"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:layout_marginTop="30dp"
                    android:text="VIP会员惊喜多多男神女神都在这里等你来租！"
                    />
            

            <Button
                android:id="@+id/rank_submit"
                style="@style/button03"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_marginTop="30dp"
                android:text="支付" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>