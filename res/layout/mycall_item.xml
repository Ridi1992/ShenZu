<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_hui"
    android:orientation="vertical" >
	<FrameLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin10dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin10dp"
            android:orientation="horizontal" >

            <com.sanmi.view.CircularImage
                android:id="@+id/iv_mycall_head"
                android:layout_width="@dimen/touxiang80"
                android:layout_height="@dimen/touxiang80"
                 />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_mycall_item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/Top"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/font_hui"
                        android:textSize="@dimen/font_14" />

                    <ImageView
                        android:id="@+id/tv_mycall_item_sex"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_marginLeft="5dp"
                         />
					<View
					    android:layout_width="wrap_content"
					    android:layout_height="1px"
					    android:layout_weight="1" 
					    />
                    <TextView
                        android:id="@+id/pay"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/Top"
                        android:gravity="center|right"
                        android:text=""
                        android:textColor="@color/chengse"
                        android:textSize="@dimen/font_14" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/Top"
                        android:gravity="center_vertical"
                        android:text="年龄"
                        android:textColor="@color/font_hui"
                        android:textSize="@dimen/font_12" />

                    <TextView
                        android:id="@+id/tv_mycall_item_age"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/Top"
                        android:gravity="center_vertical"
                        android:text=""
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/font_hui"
                        android:textSize="@dimen/font_12" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view1"
            android:layout_marginLeft="@dimen/margin10dp"
            android:layout_marginRight="@dimen/margin10dp"
            android:background="@color/qianhui_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/Top"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/Top"
                    android:gravity="center_vertical"
                    android:text="服务范围:"
                    android:singleLine="true"
                    android:textColor="@color/font_hui"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/tv_mycall_item_skill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/Top"
                    android:layout_marginLeft="@dimen/margin10dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/font_hui"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>

            <!-- <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/Top"
                    android:gravity="center_vertical"
                    android:text="联系电话:"
                    android:textColor="@color/font_hui"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/tv_mycall_item_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/Top"
                    android:layout_marginLeft="@dimen/margin10dp"
                    android:gravity="center_vertical"
                    android:text="支付以后才能看到电话"
                    android:textSize="@dimen/font_14" />
            </LinearLayout> -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/Top"
                    android:gravity="center_vertical"
                    android:text="服务地址:"
                    android:textColor="@color/font_hui"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/tv_mycall_item_make"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/Top"
                    android:layout_marginLeft="@dimen/margin10dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/font_hui"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/Top"
                    android:gravity="center_vertical"
                    android:text="租金:       "
                    android:textColor="@color/font_hui"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/tv_mycall_item_money"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/Top"
                    android:layout_marginLeft="@dimen/margin10dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/font_hui"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/Top"
                    android:gravity="center_vertical"
                    android:text="档期日期:"
                    android:textColor="@color/font_hui"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/tv_mycall_item_needtime"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/Top"
                    android:layout_marginLeft="@dimen/margin10dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/font_hui"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/Top"
                    android:gravity="center_vertical"
                    android:text="档期时间:"
                    android:textColor="@color/font_hui"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/tv_mycall_item_needtime2"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/Top"
                    android:layout_marginLeft="@dimen/margin10dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/font_hui"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/Top"
                    android:gravity="center_vertical"
                    android:text="发布时间:"
                    android:textColor="@color/font_hui"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/tv_mycall_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/Top"
                    android:layout_marginLeft="@dimen/margin10dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/font_hui"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view1"
            android:layout_marginLeft="@dimen/margin10dp"
            android:layout_marginRight="@dimen/margin10dp"
            android:background="@color/qianhui_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/margin10dp"
            android:layout_marginLeft="@dimen/margin10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_mycall_item_state"
                android:layout_width="100dp"
                android:layout_height="@dimen/Top"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/font_hui"
                android:textSize="@dimen/font_14" />

            <TextView
                android:layout_gravity="right|center_vertical"
                android:id="@+id/tv_mycall_item_pay"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/Top"
                android:layout_marginRight="@dimen/margin10dp"
                android:gravity="center|right"
                android:text=""
                android:textColor="@color/chengse"
                android:textSize="@dimen/font_14" />
        </LinearLayout>
    </LinearLayout>
		<ImageView 
		    android:id="@+id/hint"
		    android:layout_marginTop="10dp"
		    android:layout_marginLeft="10dp"
		    android:layout_width="25dp"
		    android:layout_height="25dp"
		    android:layout_marginBottom="-20dp"
	    />
	</FrameLayout>
</LinearLayout>