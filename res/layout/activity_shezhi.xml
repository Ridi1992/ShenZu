<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/bg_hui"
 android:fitsSystemWindows="true"
    android:clipToPadding="true">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/title" />

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/title2"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/toabout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical" 
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="@string/about_us"
            android:textColor="@color/huise"
            android:textSize="@dimen/font_14" 
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view1"
        android:background="@color/qianhui" />

    <RelativeLayout
        android:id="@+id/check_update"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="@string/banben_jiance"
            android:textColor="@color/huise"
            android:textSize="@dimen/font_14" />
    </RelativeLayout>

<View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view1"
        android:background="@color/qianhui" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical" 
        android:orientation="horizontal"
        android:paddingTop="3dp"
        android:background="@color/white"
        android:paddingBottom="3dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:text="客服电话    "
            android:gravity="center_vertical"
            android:textColor="@color/huise"
            android:textSize="@dimen/font_14" />
         <TextView
            android:id="@+id/shezhi_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:text=""
            android:gravity="center_vertical"
            android:textColor="@color/huise"
            android:textSize="@dimen/font_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view1"
        android:background="@color/qianhui" />
    <LinearLayout
        android:id="@+id/check_update"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
             android:text="客服QQ       "
            android:textColor="@color/huise"
            android:textSize="@dimen/font_14" />
        <TextView
            android:id="@+id/tv_shezhiqq"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
             android:text=""
            android:textColor="@color/huise"
            android:textSize="@dimen/font_14" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view1"
        android:background="@color/qianhui" />

    <RelativeLayout
        android:id="@+id/tofeedback"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical" 
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/Top"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="@string/feedback"
            android:textColor="@color/huise"
            android:textSize="@dimen/font_14" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view1"
        android:background="@color/qianhui" />

    <Button
        android:id="@+id/bt_tuichu"
        style="@style/button03"
        android:layout_width="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="@string/exit" />

</LinearLayout>