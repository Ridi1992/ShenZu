<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/newbg"
        android:gravity="center"
        android:orientation="vertical" >

        <com.sanmi.view.CircularImage
            android:id="@+id/iv_call_details_head"
            android:layout_width="@dimen/touxiang80"
            android:layout_height="@dimen/touxiang80"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_call_details_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/Top"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="@dimen/font_min" />

            <ImageView
                android:id="@+id/iv_call_details_sex"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="3dp"
                 />
            <ImageView
                android:id="@+id/iv_call_details_huiyuan"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="3dp"
                 />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin10dp"
        android:layout_marginRight="@dimen/margin10dp"
        android:layout_marginTop="@dimen/margin10dp"
        android:background="@color/bg_hui" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/Top40"
            android:layout_marginLeft="@dimen/margin10dp"
            android:gravity="center_vertical"
            android:text="年龄"
            android:textColor="@color/font_lanse"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/tv_call_details_age"
            android:layout_width="0dp"
            android:layout_height="@dimen/Top40"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/margin10dp"
            android:layout_marginRight="@dimen/margin10dp"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text=""
            android:textColor="@color/font_hui"
            android:textSize="@dimen/font_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view1"
        android:layout_marginLeft="@dimen/margin10dp"
        android:layout_marginRight="@dimen/margin10dp"
        android:background="@color/qianhui_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin10dp"
        android:layout_marginRight="@dimen/margin10dp"
        android:background="@color/bg_hui" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/Top40"
            android:layout_marginLeft="@dimen/margin10dp"
            android:gravity="center_vertical"
            android:text="身高"
            android:textColor="@color/font_lanse"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/tv_call_details_height"
            android:layout_width="0dp"
            android:layout_height="@dimen/Top40"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/margin10dp"
            android:layout_marginRight="@dimen/margin10dp"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text=""
            android:textColor="@color/font_hui"
            android:textSize="@dimen/font_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view1"
        android:layout_marginLeft="@dimen/margin10dp"
        android:layout_marginRight="@dimen/margin10dp"
        android:background="@color/qianhui_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin10dp"
        android:layout_marginRight="@dimen/margin10dp"
        android:background="@color/bg_hui" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/Top40"
            android:layout_marginLeft="@dimen/margin10dp"
            android:gravity="center_vertical"
            android:text="地区"
            android:textColor="@color/font_lanse"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/tv_call_details_addrss"
            android:layout_width="0dp"
            android:layout_height="@dimen/Top40"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/margin10dp"
            android:layout_marginRight="@dimen/margin10dp"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text=""
            android:textColor="@color/font_hui"
            android:textSize="@dimen/font_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view1"
        android:layout_marginLeft="@dimen/margin10dp"
        android:layout_marginRight="@dimen/margin10dp"
        android:background="@color/qianhui_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin10dp"
        android:layout_marginRight="@dimen/margin10dp"
        android:background="@color/bg_hui" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/Top40"
            android:layout_marginLeft="@dimen/margin10dp"
            android:gravity="center_vertical"
            android:text="职业"
            android:textColor="@color/font_lanse"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/tv_call_details_profession"
            android:layout_width="0dp"
            android:layout_height="@dimen/Top40"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/margin10dp"
            android:layout_marginRight="@dimen/margin10dp"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text=""
            android:textColor="@color/font_hui"
            android:textSize="@dimen/font_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view1"
        android:layout_marginLeft="@dimen/margin10dp"
        android:layout_marginRight="@dimen/margin10dp"
        android:background="@color/qianhui_color" />
    

</LinearLayout>
