<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:ignore="HardcodedText" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/title" />

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/title2"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="3dp"
                android:background="#cccccc"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/Top"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="用  户  名"
                    android:textColor="#6b60f6"
                    android:textSize="@dimen/font_14" />

                <EditText
                    android:id="@+id/tixian_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:background="#cccccc"
                    android:gravity="center_vertical"
                    android:hint="姓名"
                    android:lines="1"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="3dp"
                android:background="#cccccc"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/Top"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="银行卡号"
                    android:textColor="#6b60f6"
                    android:textSize="@dimen/font_14" />

                <EditText
                    android:id="@+id/tixian_card"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:background="#cccccc"
                    android:gravity="center_vertical"
                    android:hint="请输入卡号"
                    android:inputType="numberDecimal"
                    android:lines="1"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="3dp"
                android:background="#cccccc"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/Top"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="提现金额"
                    android:textColor="#6b60f6"
                    android:textSize="@dimen/font_14" />

                <EditText
                    android:id="@+id/tixian_amount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:background="#cccccc"
                    android:gravity="center_vertical"
                    android:hint="请输入金额"
                    android:inputType="numberDecimal"
                    android:lines="1"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="3dp"
                android:background="#cccccc"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/Top"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="手  续  费"
                    android:textColor="#6b60f6"
                    android:textSize="@dimen/font_14" />

                <EditText
                    android:id="@+id/tixian_amount2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:background="#cccccc"
                    android:gravity="center_vertical"
                    android:hint=""
                    android:editable="false"
                    android:focusable="false" 
                     android:inputType="numberDecimal"
                    android:lines="1"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_tixian"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/Top"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="#E03D15"
                android:textSize="@dimen/font_12" />

            <Button
                android:id="@+id/tixian_submit"
                style="@style/button02"
                android:layout_marginTop="40dp"
                android:layout_weight="0.10"
                android:text="下一步"
                android:textSize="@dimen/font_16" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>