<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/paddingTop"
        android:paddingBottom="@dimen/paddingTop"
        >
          <com.sanmi.view.CircularImage
            android:id="@+id/iv_mf_touxiang" 
            android:layout_width="@dimen/touxiang65"
            android:layout_height="@dimen/touxiang65"
            android:src="@drawable/morentu"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
           />  
      
        <RelativeLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp">
            <TextView
                android:id="@+id/mf_hire_info"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/Top"
                android:gravity="center_vertical"
                android:textSize="@dimen/ziti14"
                android:textColor="@color/lanzise"/>
            <TextView 
                android:id="@+id/mf_bardian_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/Top"
                android:gravity="center_vertical"
                android:text="@string/bardian_name"
                android:textSize="@dimen/ziti12"
                android:textColor="@color/lanzise"
                android:layout_below="@id/mf_hire_info"
                />
            <TextView 
                android:id="@+id/mf_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/Top"
                android:gravity="center_vertical"
                android:text=""
                android:layout_marginLeft="@dimen/margin10dp"
                android:layout_below="@id/mf_hire_info"
                android:layout_toRightOf="@id/mf_bardian_name"
                android:textColor="@color/shenhui"
                android:textSize="@dimen/ziti12"
                 android:singleLine="true"
                />
            
          
            <TextView 
                android:id="@+id/mf_serv_me"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/Top"
                android:gravity="center_vertical"
                android:text="@string/serv_me"
                android:textSize="@dimen/ziti12"
                android:layout_below="@id/mf_bardian_name"
                android:textColor="@color/lanzise"/>
            <TextView 
                android:id="@+id/mf_serv_me1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/Top"
                android:gravity="center_vertical"
                android:text="服务地址:"
                android:textSize="@dimen/ziti12"
                android:layout_below="@id/mf_serv_me"
                android:textColor="@color/lanzise"/>
            <TextView 
                android:id="@+id/mf_distance"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/Top"
                android:gravity="center_vertical"
                android:textSize="@dimen/ziti10"
                android:text=""
                android:layout_below="@id/mf_serv_me1"
                android:textColor="@color/huise"
                />

            <TextView
                android:id="@+id/mf_serv_me_info"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/Top"
                android:layout_alignBaseline="@+id/mf_serv_me"
                android:layout_alignBottom="@+id/mf_serv_me"
                android:layout_alignLeft="@+id/mf_tv_name"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/shenhui"
                android:textSize="@dimen/ziti12" />

            <TextView
                android:id="@+id/mf_serv_me_info1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/Top"
                android:layout_alignBaseline="@+id/mf_serv_me1"
                android:layout_alignParentRight="true"
                android:layout_below="@id/mf_serv_me_info"
                android:layout_toRightOf="@+id/mf_tv_name"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/shenhui"
                android:textSize="@dimen/ziti12" />

        </RelativeLayout>
        
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="right"
            android:paddingRight="5dp"
            >
            <TextView 
                android:id="@+id/mf_tv_f_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/ziti10"
                android:textColor="@color/huise"
                android:text="dfsfd"
                />
            <!-- <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_see"
                android:textColor="@color/baise"
                android:background="@color/qianhongse"
                android:textSize="@dimen/ziti10"
                android:layout_marginTop="30dp"/> -->
        </LinearLayout>
    </LinearLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="@dimen/view1"
        android:background="@color/qianhui_color"
        />

</LinearLayout>
