<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white"
    
 android:fitsSystemWindows="true"
    android:clipToPadding="true">
    
 <include 
        layout="@layout/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
  <include 
        layout="@layout/title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
  <ScrollView 
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
      <LinearLayout 
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView 
                android:id="@+id/rengzheng_01"
                android:layout_width="@dimen/touxiang80"
                android:layout_height="@dimen/touxiang80"
                 android:src="@drawable/morentu"
                 android:scaleType="centerCrop"
                android:background="@drawable/renzheng_xml"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="@dimen/Top"
                android:textColor="@color/huise"
                android:textSize="@dimen/font_min"
                android:gravity="center"
                 android:layout_marginTop="5dp"
                android:text="@string/shenfen_front"
                />
        </LinearLayout>
         <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            >
            <ImageView 
                android:id="@+id/rengzheng_02"
                android:layout_width="@dimen/touxiang80"
                android:layout_height="@dimen/touxiang80"
                android:src="@drawable/morentu"
                android:scaleType="centerCrop"
                android:background="@drawable/renzheng_xml"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="@dimen/Top"
                android:textColor="@color/huise"
                android:textSize="@dimen/font_min"
                android:gravity="center"
                 android:layout_marginTop="5dp"
                android:text="@string/shenfen_side"/>
        </LinearLayout>
         <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView 
                android:id="@+id/rengzheng_03"
                android:layout_width="@dimen/touxiang80"
                android:layout_height="@dimen/touxiang80"
                 android:src="@drawable/morentu"
                 android:scaleType="centerCrop"
                android:background="@drawable/renzheng_xml"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_height="@dimen/Top"
                android:textColor="@color/huise"
                android:textSize="@dimen/font_min"
                android:gravity="center"
                android:text="本人照片"/>
        </LinearLayout>
    </LinearLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="@dimen/view1"
        android:background="@color/qianhui_color"
       />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp" 
            android:orientation="horizontal"
            android:paddingRight="15dp"
            android:paddingLeft="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/Top"
                android:textColor="@color/shenhui"
                android:textSize="@dimen/font_14"
                android:gravity="center"
                android:text="@string/name"
               />
              <EditText
                  android:id="@+id/nickname"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@color/baise"
                android:inputType="text"
                android:textColor="@color/shenhui"
                android:textSize="@dimen/font_14"
                android:singleLine="true"
                android:layout_weight="1"
                android:gravity="center_vertical"
                />
        </LinearLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="@dimen/view1"
            android:background="@color/qianhui_color"/>
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp" 
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/Top"
                android:textColor="@color/shenhui"
                android:textSize="@dimen/font_14"
                android:gravity="center"
                android:text="@string/shenfen_num"
               
               />
              <EditText
                android:id="@+id/idCard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/baise"
                android:layout_marginLeft="10dp"
                android:textColor="@color/shenhui"
                android:textSize="@dimen/font_14"
                android:inputType="number"
                android:singleLine="true"
                android:layout_weight="1"
                android:gravity="center_vertical"
                />
        </LinearLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="@dimen/view1"
            android:background="@color/qianhui_color"/>
        <Button 
            android:id="@+id/send"
             style="@style/button03" 
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:layout_marginTop="50dp"
             android:layout_height="45dp"
             android:layout_width="match_parent" 
            android:text="@string/trues"
            android:layout_gravity="center"
            android:textSize="@dimen/font_16"/>
        </LinearLayout>
  </ScrollView>
</LinearLayout>
