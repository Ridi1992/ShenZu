<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baise"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <include layout="@layout/title" />

    <include
        layout="@layout/title2"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/zhifu_bg"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin10dp"
                android:layout_marginRight="@dimen/margin10dp"
                android:layout_marginTop="@dimen/margin10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/Top40"
                    android:layout_marginLeft="@dimen/margin10dp"
                    android:gravity="center_vertical"
                    android:text="交易金额"
                    android:textColor="@color/font_lanse"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/zhifu_amount_rent"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/Top40"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/margin10dp"
                    android:layout_marginRight="@dimen/margin10dp"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:text=""
                    android:textColor="@color/font_hui"
                    android:textSize="@dimen/font_14" />
            </LinearLayout>
            
                        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin10dp"
                android:layout_marginRight="@dimen/margin10dp"
                android:layout_marginTop="@dimen/margin10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/Top40"
                    android:layout_marginLeft="@dimen/margin10dp"
                    android:gravity="center_vertical"
                    android:text="手续费"
                    android:textColor="@color/font_lanse"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/zhifu_counter_rent"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/Top40"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/margin10dp"
                    android:layout_marginRight="@dimen/margin10dp"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:text=""
                    android:textColor="@color/font_hui"
                    android:textSize="@dimen/font_14" />
            </LinearLayout>
            
                                    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin10dp"
                android:layout_marginRight="@dimen/margin10dp"
                android:layout_marginTop="@dimen/margin10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/Top40"
                    android:layout_marginLeft="@dimen/margin10dp"
                    android:gravity="center_vertical"
                    android:text="总金额"
                    android:textColor="@color/font_lanse"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/zhifu_fact_rent"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/Top40"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/margin10dp"
                    android:layout_marginRight="@dimen/margin10dp"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:text=""
                    android:textColor="@color/font_hui"
                    android:textSize="@dimen/font_14" />
            </LinearLayout>

            <Button
                android:id="@+id/zhifu_pay"
                style="@style/button03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="50dp"
                android:text="支付"
                android:textSize="@dimen/font_16" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>